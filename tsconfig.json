{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "emitDeclarationOnly": true,
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
